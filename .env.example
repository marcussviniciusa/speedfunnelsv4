# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_USER=speedfunnels
POSTGRES_PASSWORD=your_database_password
POSTGRES_DB=speedfunnels

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# Authentication
JWT_SECRET=change_this_to_a_secure_secret

# Meta Business Integration
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:3001/api/meta-business-auth/callback

# Google OAuth Integration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3001/api/auth/google/callback

# Frontend Configuration
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:3000

# Domains (for local testing)
FRONTEND_DOMAIN=dashboard.speedfunnels.local
API_DOMAIN=api.speedfunnels.local

# Traefik (for production)
ACME_EMAIL=your_email@example.com
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$xyz123$hashedpassword

# App Settings
NODE_ENV=development
