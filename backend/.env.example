# Configurações do servidor
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Configurações do banco de dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=speedfunnels
DB_USER=postgres
DB_PASSWORD=your_password

# Configurações do Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Configurações de autenticação
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Configurações do Meta Business
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:3001/api/meta-business-auth/callback

# Configurações de autenticação OAuth do Google
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3001/api/auth/google/callback
